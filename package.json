{
  "name": "custom-console-colors",
  "version": "0.0.4",
  "description": "Custom colors to be used in a NodeJS console",
  "main": "lib/index.js",
  "module": "lib/index.es.js",
  "types": "lib/index.d.js",
  "scripts": {
    "prebuild": "rollup --version && rimraf lib && npm run lint:fix",
    "build": "rollup -c",
    "build:live": "nodemon -e ts --watch src index.js",
    "compile": "npm run prebuild && tsc -p tsconfig.prod.json",
    "coverage": "jest --coverage && cat ./coverage/lcov.info | coveralls",
    "lint": "prettier --check \"./src/**/*.ts\"",
    "lint:fix": "prettier --write \"./src/**/*.ts\"",
    "prepare": "husky install",
    "prepublishOnly": "npm run build",
    "start": "npm run build:live",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ialopezg/custom-console-colors.git"
  },
  "keywords": [
    "console",
    "color",
    "colors",
    "style",
    "console styled"
  ],
  "author": "Isidro A. Lopez G. <me@ialopezg.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ialopezg/custom-console-colors/issues"
  },
  "homepage": "https://github.com/ialopezg/custom-console-colors#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.0.0",
    "@rollup/plugin-node-resolve": "^15.2.1",
    "@rollup/plugin-terser": "^0.4.3",
    "@rollup/plugin-typescript": "^11.1.4",
    "@types/jest": "^29.5.5",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "conventional-changelog-angular": "^7.0.0",
    "conventional-changelog-cli": "^4.1.0",
    "coveralls": "^3.1.1",
    "eslint": "^8.50.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.4",
    "rollup": "^3.29.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2"
  },
  "files": [
    "lib",
    "CHANGELOG.md"
  ],
  "engines": {
    "node": ">=8"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/",
      "/lib"
    ]
  }
}
