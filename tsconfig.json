{
  "compilerOptions": {
    "target": "es6",
    "module": "ESNext",
    "lib": ["es6"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./lib",
    "rootDir": "./src","noImplicitAny": true,
    "moduleResolution": "node",
    "typeRoots": ["./src/types"],
    "esModuleInterop": true
  },
  "include": ["./src/**/*"],
  "exclude": ["build", "node_modules"]
}
